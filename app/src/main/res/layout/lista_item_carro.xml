<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imagenCarro"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txt_producto"
        android:text="producto"
        android:layout_alignTop="@+id/imagenCarro"
        android:layout_toRightOf="@+id/imagenCarro"
        android:layout_toEndOf="@+id/imagenCarro"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cantidad: "
        android:id="@+id/txt_cantidad_carro"
        android:layout_below="@+id/txt_producto"
        android:layout_alignLeft="@+id/txt_producto"
        android:layout_alignStart="@+id/txt_producto"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#"
        android:id="@+id/txt_cantidad"
        android:layout_alignTop="@+id/txt_cantidad_carro"
        android:layout_toRightOf="@+id/txt_cantidad_carro"
        android:layout_toEndOf="@+id/txt_cantidad_carro" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Precio:"
        android:id="@+id/txt_precio_carro"
        android:layout_alignBottom="@+id/txt_cantidad"
        android:layout_toRightOf="@+id/txt_producto"
        android:layout_toEndOf="@+id/txt_producto"
        android:layout_marginLeft="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="#"
        android:id="@+id/txt_precio_p"
        android:layout_alignTop="@+id/txt_precio_carro"
        android:layout_toRightOf="@+id/txt_precio_carro"
        android:layout_toEndOf="@+id/txt_precio_carro"
        android:layout_marginLeft="12dp" />
</RelativeLayout>