<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oskrojas.elrefri.MenuUsuario"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="141dp" />

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_carro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_icon="@drawable/shop"
        fab:fab_colorNormal="@color/accent_color"
        fab:fab_colorPressed="@color/accent_color"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="12dp"
        android:layout_gravity="right|top"
        android:layout_marginTop="-36dp"
        android:visibility="visible" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_tienda"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:src="@drawable/icon_tienda"
            android:layout_gravity="left|center_vertical"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_pedidos"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:src="@drawable/icon_pedidos"
            android:layout_gravity="left|center_vertical"
            android:layout_below="@+id/img_tienda"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:focusableInTouchMode="false" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_user"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:src="@drawable/icon_usuario"
            android:layout_gravity="left|center_vertical"
            android:layout_below="@+id/img_pedidos"
            android:layout_alignLeft="@+id/img_pedidos"
            android:layout_alignStart="@+id/img_pedidos"
            android:layout_marginTop="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/txt_tienda1"
            android:id="@+id/textView2"
            android:layout_alignTop="@+id/img_tienda"
            android:layout_toLeftOf="@+id/img_tienda"
            android:layout_toStartOf="@+id/img_tienda"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/txt_pedidos1"
            android:id="@+id/textView4"
            android:layout_alignTop="@+id/img_pedidos"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginTop="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/txt_usuario1"
            android:id="@+id/textView5"
            android:layout_alignTop="@+id/img_user"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_marginTop="32dp" />


    </RelativeLayout>

</LinearLayout>
