<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.oskrojas.elrefri.LoginActivity">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/btn_ayuda_tienda"
            android:background="@drawable/ic_launcher"
            android:layout_above="@+id/btn_ayuda_pedidos"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="34dp" />

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/btn_ayuda_carro"
            android:background="@drawable/ic_launcher"
            android:layout_alignTop="@+id/btn_ayuda_tienda"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:id="@+id/btn_ayuda_pedidos"
            android:background="@drawable/ic_launcher"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/btn_ayuda_usuario"
            android:background="@drawable/ic_launcher"
            android:layout_alignTop="@+id/btn_ayuda_pedidos"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/txt_ayuda_menu"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="26dp" />

    </RelativeLayout>


</LinearLayout>