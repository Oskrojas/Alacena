<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:orientation="vertical">

<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_my_toolbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="?attr/actionBarSize"
    android:background="@color/primary_color"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

</android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/versionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What Version?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/img_logo"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_face"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/com_facebook_inverse_icon"
        android:layout_gravity="left|center_vertical"
        android:tint="#ffb4b9ba"
        android:layout_alignTop="@+id/img_info"
        android:layout_toLeftOf="@+id/versionName"
        android:layout_toStartOf="@+id/versionName" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_info"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:src="@drawable/ic_internet"
        android:layout_gravity="left|center_vertical"
        android:layout_below="@+id/versionName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_mail"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:src="@drawable/ic_mail"
        android:layout_gravity="left|center_vertical"
        android:layout_below="@+id/versionName"
        android:layout_toRightOf="@+id/versionName"
        android:layout_toEndOf="@+id/versionName"
        android:layout_marginTop="16dp" />


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img_logo"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:longClickable="false"
        android:src="@mipmap/ic_launcher" />

</RelativeLayout>